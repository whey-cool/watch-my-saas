# ===========================================
# Watch My SaaS â€” Environment Configuration
# ===========================================
# Copy to .env and fill in your values.

# --- Required ---

# PostgreSQL connection string
DATABASE_URL="postgresql://watchmysaas:watchmysaas@localhost:5433/watchmysaas?schema=public"

# API key for authenticated endpoints (generate a random string)
API_KEY="your-api-key-here"

# --- Optional ---

# Server port (default: 3000)
PORT=3000

# Node environment
NODE_ENV=development

# --- Feature Flags (all default to false) ---

# Enable the dashboard SPA
WATCHMYSAAS_FEATURE_DASHBOARD=false

# Enable the public timeline embed
WATCHMYSAAS_FEATURE_PUBLIC_TIMELINE=false

# --- Telemetry (opt-in, default disabled) ---

# Enable anonymous usage telemetry
WATCHMYSAAS_TELEMETRY=false

# Unique instance identifier (auto-generated on first enable)
WATCHMYSAAS_INSTANCE_ID=
